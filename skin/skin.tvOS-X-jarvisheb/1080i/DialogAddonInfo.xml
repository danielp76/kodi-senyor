<?xml version="1.0" encoding="UTF-8"?>
<window id="146">
  <defaultcontrol always="true">300</defaultcontrol>
  <include>OpenClose</include>
  <allowoverlay>no</allowoverlay>
  <controls>
    <include>Background</include>
    <include>Header</include>
    <control type="image">
      <width>1920</width>
      <height>1080</height>
      <colordiffuse>20FFFFFF</colordiffuse>
      <info>ListItem.Art(fanart)</info>
    </control>
    <control type="image" description="Icon">
      <centerleft>1300</centerleft>
      <centertop>540</centertop>
      <width>500</width>
      <height>500</height>
      <aspectratio>keep</aspectratio>
      <bordertexture>images/White.png</bordertexture>
      <bordersize>3</bordersize>
      <texture fallback="DefaultAddon.png">$INFO[ListItem.Thumb]</texture>
    </control>
    <control type="image" description="whitback">
      <centerleft>540</centerleft>
      <top>80</top>
      <width>950</width>
      <height>1000</height>
      <!--include>right_listpanel_unfocused</include-->
	  <include>seekbar_bkgd</include>
	  <aspectratio>scale</aspectratio>
    </control>		
    <control type="grouplist">
      <top>100</top>
      <centerleft>540</centerleft>
      <orientation>horizontal</orientation>
      <align>center</align>
      <itemgap>20</itemgap>
      <control type="label" description="Item Label">
        <width>auto</width>
        <height>40</height>
        <textcolor>textcolor2</textcolor>
        <font>Size42b</font>
        <align>center</align>
        <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
        <info>ListItem.Property(Addon.Name)</info>
      </control>
      <control type="label" description="Item Label">
        <width>auto</width>
        <height>52</height>
        <textcolor>textcolor3</textcolor>
        <font>Size22</font>
        <align>center</align>
        <autoscroll time="6000" delay="8000" repeat="8000">true</autoscroll>
        <info>ListItem.Property(Addon.Version)</info>
      </control>
    </control>
    <control type="label" description="summary">
      <top>150</top>
      <centerleft>540</centerleft>
      <width>900</width>
      <height>45</height>
      <font>size30</font>
      <textcolor>textcolor3</textcolor>
      <align>center</align>
      <label>$INFO[ListItem.Property(Addon.Summary)]</label>
    </control>
    <control type="label" description="Disclaimer">
      <top>290</top>
      <centerleft>540</centerleft>
      <width>880</width>
      <height>45</height>
      <font>size27</font>
      <align>center</align>
      <textcolor>red</textcolor>
	  <scroll>true</scroll>
      <label>$INFO[ListItem.Property(Addon.Disclaimer)]</label>
    </control>
    <control type="textbox" description="Plot">
      <centerleft>540</centerleft>
      <top>330</top>
      <width>900</width>
      <height>750</height>
      <align>justify</align>
      <autoscroll delay="6500" time="4000" repeat="10000"></autoscroll>
      <label>$INFO[ListItem.Property(Addon.Description)]</label>
    </control>
    <control type="textbox" description="Author">
      <top>850</top>
      <centerleft>1300</centerleft>
      <width>500</width>
      <height>200</height>
      <font>size33</font>
      <align>center</align>
      <label>by $INFO[ListItem.Property(Addon.Creator)]</label>
    </control>
    <control type="group" description="Options">
      <control type="grouplist" id="300">
        <centertop>540</centertop>
        <right>50</right>
        <width>250</width>
        <align>center</align>
        <height>1080</height>
        <itemgap>9</itemgap>
        <onleft>noop</onleft>
        <onright>noop</onright>
        <onup></onup>
        <ondown>9001</ondown>
        <control type="button" id="6" description="Install">
          <animation effect="zoom" time="120" start="100" end="120" center="auto" tween="Back" easing="Out">Focus</animation>
          <label>24038</label>
          <width>260</width>
        </control>
        <control type="button" id="7" description="Disable">
          <animation effect="zoom" time="120" start="100" end="120" center="auto" tween="Back" easing="Out">Focus</animation>
          <label>24021</label>
          <width>260</width>
        </control>
        <control type="button" id="8" description="update">
          <animation effect="zoom" time="120" start="100" end="120" center="auto" tween="Back" easing="Out">Focus</animation>
          <label>24069</label>
          <width>260</width>
        </control>
        <control type="button" id="9" description="settings">
          <animation effect="zoom" time="120" start="100" end="120" center="auto" tween="Back" easing="Out">Focus</animation>
          <label>5</label>
          <width>260</width>
        </control>
        <control type="button" id="10" description="changelog">
          <animation effect="zoom" time="120" start="100" end="120" center="auto" tween="Back" easing="Out">Focus</animation>
          <label>24054</label>
          <width>260</width>
        </control>
        <control type="button" id="11" description="rollback">
          <animation effect="zoom" time="120" start="100" end="120" center="auto" tween="Back" easing="Out">Focus</animation>
          <label>24048</label>
          <width>260</width>
        </control>
        <control type="button" id="12" description="start">
          <animation effect="zoom" time="120" start="100" end="120" center="auto" tween="Back" easing="Out">Focus</animation>
          <label>335</label>
          <width>260</width>
        </control>
      </control>
    </control>
  </controls>
</window>
